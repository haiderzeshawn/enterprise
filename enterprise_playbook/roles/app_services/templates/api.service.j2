[Unit]
Description=E21 - {{ service_host_name }}
After=network.target

[Service]
WorkingDirectory={{ deployment_base_dir }}/{{ service_host_url }}/Api/Stable_Runing
ExecStart={{ service_script_base_dir }}/{{ service_host_url }}/run-service-{{ service_host_name }}.sh
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier={{ service_host_name }}
User=nginx
Group=nginx
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=ASPNETCORE_URLS=http://{{ service_listen }}:{{ service_port }}

[Install]
WantedBy=multi-user.target

