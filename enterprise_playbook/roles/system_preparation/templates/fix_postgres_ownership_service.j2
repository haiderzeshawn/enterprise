[Unit]
Description=Auto-chown new files in {{ pg_db_directories | join(', ') }} to {{ postgres_user }}
After=network.target

[Service]
Type=simple
ExecStart=/bin/bash /usr/local/bin/vw-scripts/fix-postgres-ownership-script.sh
Restart=always
RestartSec=5s
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=fix-postgres-ownership

[Install]
WantedBy=multi-user.target

