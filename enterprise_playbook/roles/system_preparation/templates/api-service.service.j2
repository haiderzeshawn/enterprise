[Unit]
Description=E21 - {{ item.service_host_name }} - Api
After=network.target

[Service]
WorkingDirectory={{ item.service_app_working_dir }}
ExecStart={{ item.service_script_dir }}/run-service-{{ item.service_host_name }}-api.sh
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier={{ item.service_host_name }}
User={{ webserver_user }}
Group={{ webserver_group }}
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=ASPNETCORE_URLS=http://{{ item.service_listen }}:{{ item.service_port }}

[Install]
WantedBy=multi-user.target
