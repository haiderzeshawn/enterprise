#!/bin/bash

# Debugging
exec > >(logger -t fix-ownership-mysql) 2>&1

while true; do
    inotifywait -r -e create -e moved_to \
        --format '%w%f' \
        {% for dir in mysql_db_directories %}
        {{ dir }} {% endfor %} | while read -r FILE
    do
        [ -e "$FILE" ] && chown {{ mysql_user }}:{{ mysql_user }} "$FILE"
    done
    sleep 1
done

